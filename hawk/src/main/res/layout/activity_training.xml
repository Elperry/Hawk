<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="org.opencv.cultoftheunicorn.hawk.cultoftheunicorn.hawk.Training">

        <cultoftheunicorn.hawk.Tutorial3View
            android:id="@+id/tutorial3_activity_java_surface_view"
            android:layout_width="match_parent"
            android:layout_height="355dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            tools:rotation="0" />

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="196dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="49dp"
            android:contentDescription="@string/image_preview"
            android:src="@drawable/user_image" />

        <ToggleButton
            android:id="@+id/capture"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/back"
            android:layout_alignTop="@+id/imagePreview"
            android:checked="false"
            android:textAllCaps="false"
            android:textOff="@string/capture"
            android:textOn="@string/capturing" />

        <Button
            android:id="@+id/back"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imagePreview"
            android:layout_alignParentStart="true"
            android:layout_marginStart="57dp"
            android:text="@string/done" />

    </RelativeLayout>

</ScrollView>

